generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Products {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float    @default(0)
  description String?
  createdAt   DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  username  String
  password  String
  createdAt DateTime @default(now())
}
